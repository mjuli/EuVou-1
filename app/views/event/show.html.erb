
	
<div class="container">
	<div class="panel panel-default card-show">  	
		<header>

	 	
		
			<%= image_tag(@evento[:image], :class => "show-img") %>
			
			<div class="linha">
				<p>Criado por: Ítalo</p>
				<p class="direita">
					<span class="glyphicon glyphicon-ok"></span>
					45
				</p>
			</div>
			<h1 class="centralizado"><%= @evento[:title]%></h1>
		
		</header>

		<div class="container show">
			<p><span class="bold">Data: </span><%= Time.parse(@evento[:time]).strftime("%d/%m/%Y")%></p>
			<p><span class="bold">Hora: </span><%= Time.parse(@evento[:time]).strftime("%T")%></p>
			<p><span class="bold">Descrição:</span></p>
			<p class="descricao"><%= @evento[:description]%></p>
			<p><span class="bold">Local: </span></p>

			<div id="map"></div>
			<hr>
			<div class="comentarios">
				<h2>Comentários:</h2>
				
				<input type="text" class="comentar input-group" placeholder="Search">
				<button type="submit" class="btn btn-default direita">Enviar</button>
			</div>

			<div class="comments">
				<p>User01: Evento legal!</p>
			</div>
				
			

		</div>
	</div>
</div>

<hr>
 
<div class="white">     
	<div class="container">

	    <!-- Footer -->
	    <footer>
	        <div class="row">
	            <div class="col-lg-12 centralizado">
	                <a href="/event"><%= image_tag("logo_3.png",:size => "150x70", :class => "logo") %></a>
	            </div>
	        </div>
	    </footer>

	</div>
</div>