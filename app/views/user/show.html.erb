<% if @user %>
	
	<header>
		
		<div class="container">
			<h1 class="centralizado"><%= @user["name"] %></h1>
		</div>
		
	</header>
	<div class="centralizado">
		<p><%= @user["email"] %></p>
	</div>

	<div class="container show">
		<h3>Eventos criados por <%= @user["name"] %></h3><br>
		<%= render partial: "event/event", collection: @user["event_show"] %>
	</div>
	    
	<div class="container">

	    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="col-lg-12 centralizado">
                <a href="index.html"><%= image_tag("logo_3.png",:size => "150x70", :class => "logo") %></a>
            </div>
        </div>
    </footer>

	</div>

<% else %>

	<br>
	<div class="container">
		<h1 class="centralizado">Usuário não encontrado</h1>
	</div>
	
<% end %>